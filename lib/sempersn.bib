@article{weise2020pygpc,
 author = {Weise, Konstantin and Po{\ss}ner, Lucas and M\"uller, Erik and Gast, Richard and Kn\"osche, Thomas R.},
 title = {Pygpc: {A} sensitivity and uncertainty analysis toolbox for Python},
